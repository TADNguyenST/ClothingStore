<?xml version="1.0" encoding="UTF-8"?>
<web-app version="4.0" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd">
    <display-name>ClothingStore</display-name>
    <servlet>
        <servlet-name>HomepageController</servlet-name>
        <servlet-class>controller.auth.HomepageController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>FeedbackReplyController</servlet-name>
        <servlet-class>controller.staff.FeedbackReplyController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>BlogController</servlet-name>
        <servlet-class>controller.customer.BlogController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>HomepageController</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>home</welcome-file>
    </welcome-file-list>
    <servlet>
        <servlet-name>FeedbackController</servlet-name>
        <servlet-class>controller.customer.FeedbackController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>FeedbackController</servlet-name>
        <url-pattern>/feedback</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>WishlistController</servlet-name>
        <servlet-class>controller.customer.WishlistController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>WishlistController</servlet-name>
        <url-pattern>/wishlist</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>StaffBlogListController</servlet-name>
        <servlet-class>controller.staff.StaffBlogListController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>StaffBlogListController</servlet-name>
        <url-pattern>/StaffBlogListController</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>StaffBlogController</servlet-name>
        <servlet-class>controller.staff.StaffBlogController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>StaffBlogController</servlet-name>
        <url-pattern>/StaffBlogController</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>StockController</servlet-name>
        <servlet-class>controller.stock.StockController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EditStockController</servlet-name>
        <servlet-class>controller.stock.EditStockController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AdmindashboardController</servlet-name>
        <servlet-class>controller.admin.AdmindashboardController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>StockDetailController</servlet-name>
        <servlet-class>controller.stock.StockDetailController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProductManagerController</servlet-name>
        <servlet-class>controller.admin.ProductManagerController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>StockMovementController</servlet-name>
        <servlet-class>controller.stock.StockMovementController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>StockController</servlet-name>
        <url-pattern>/Stock</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EditStockController</servlet-name>
        <url-pattern>/EditStock</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AdmindashboardController</servlet-name>
        <url-pattern>/Admindashboard</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ProductManagerController</servlet-name>
        <url-pattern>/ProductManager</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>StockDetailController</servlet-name>
        <url-pattern>/StockDetail</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>StockMovementController</servlet-name>
        <url-pattern>/StockMovement</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FeedbackReplyController</servlet-name>
        <url-pattern>/FeedbackReplyController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>BlogController</servlet-name>
        <url-pattern>/blog</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>
</web-app>
